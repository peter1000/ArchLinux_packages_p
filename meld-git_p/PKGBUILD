# Maintainer: peter1000 <https://github.com/peter1000>
# Contributor: Jason Edson <jason@oceighty.co>

_srcname=meld
pkgname=${_srcname}-git_p
pkgver=3.15.0.r43.ga6b49c2
pkgrel=1
pkgdesc='Visual diff and merge tool'
arch=('any')
url='http://meldmerge.org/'
license=('GPL')
depends=('python2'
        'gtk3>=3.6'
	'glib2>=2.34'
	'python2-gobject>=3.6'
	'pygobject-devel>=3.6'
	'gtksourceview3>=3.6')
makedepends=('intltool' 'gnome-doc-utils' 'git' 'itstool')
optdepends=('python2-dbus: open a new tab in an already running instance'
            'python2-gconf: gnome integration')
install=meld.install
options=('!emptydirs')
provides=("meld=${pkgver}" "${pkgname}=${pkgver}")
conflicts=('meld' 'meld-dev' 'meld-git')
replaces=('meld')
source=("${_srcname}::git+https://git.gnome.org/browse/meld.git")      #commit=a6b49c2  OK
sha256sums=('SKIP')

pkgver() {
    cur_prefix='v'
    cd "${srcdir}/${_srcname}"
    local _tag_stripped="$(git describe --abbrev=0 --tags | sed 's/^'${cur_prefix}'//;s/-/./g')"
    local _rev="$(($(git rev-list --count HEAD)-$(git rev-list --count $(git describe --abbrev=0 --tags))))"
    printf "${_tag_stripped}.r${_rev}.g%s" "$(git rev-parse --short HEAD)"
}

prepare() {
    cd "${srcdir}/${_srcname}"
}

#build() {
    #cd "${srcdir}/${_srcname}"
    #python2 setup.py build
#}

package() {
    cd "${srcdir}/${_srcname}"
    python2 setup.py \
        --no-update-icon-cache --no-compile-schemas install \
        --prefix=/usr \
        --root="${pkgdir}" \
        --optimize=1

}
