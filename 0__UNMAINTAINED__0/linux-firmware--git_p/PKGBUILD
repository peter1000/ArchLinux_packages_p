# Contributor: Thomas BÃ¤chler <thomas@archlinux.org>

_srcname=linux-firmware
pkgname=${_srcname}-git_p
# Commit date + git rev-parse --short origin/master
_rev=6ebf5d5
pkgver=20150904.${_rev}
pkgrel=1
pkgdesc="Firmware files for Linux"
makedepends=('git')
arch=('any')
url="http://git.kernel.org/?p=linux/kernel/git/firmware/linux-firmware.git;a=summary"
license=('GPL2' 'GPL3' 'custom')
provides=("linux-firmware=${pkgver}" "${pkgname}=${pkgver}")
conflicts=('libcap')
conflicts=('linux-firmware'
           'linux-firmware-git'
           'kernel26-firmware'
           'ar9170-fw'
           'iwlwifi-1000-ucode'
           'iwlwifi-3945-ucode'
           'iwlwifi-4965-ucode'
           'iwlwifi-5000-ucode'
           'iwlwifi-5150-ucode'
           'iwlwifi-6000-ucode'
           'rt2870usb-fw'
           'rt2x00-rt61-fw'
           'rt2x00-rt71w-fw'
           'amd-ucode')
replaces=('linux-firmware'
          'kernel26-firmware'
          'ar9170-fw'
          'iwlwifi-1000-ucode'
          'iwlwifi-3945-ucode'
          'iwlwifi-4965-ucode'
          'iwlwifi-5000-ucode'
          'iwlwifi-5150-ucode'
          'iwlwifi-6000-ucode'
          'rt2870usb-fw'
          'rt2x00-rt61-fw'
          'rt2x00-rt71w-fw'
          'amd-ucode')
options=(!strip)
source=("${_srcname}::git+https://git.kernel.org/pub/scm/linux/kernel/git/firmware/linux-firmware.git#commit=${_rev}")
sha256sums=('SKIP')

package() {
    cd "${srcdir}/${_srcname}"

    make DESTDIR="${pkgdir}" FIRMWAREDIR=/usr/lib/firmware install
    rm "${pkgdir}/usr/lib/firmware/"{Makefile,README,configure,GPL-3}

    install -d "${pkgdir}/usr/share/licenses/${_srcname}"
    install -Dm644 LICEN* WHENCE "${pkgdir}/usr/share/licenses/linux-firmware/"

    # Trigger a microcode reload for configurations not using early updates
    install -d "${pkgdir}/usr/lib/tmpfiles.d"
    echo 'w /sys/devices/system/cpu/microcode/reload - - - - 1' \
        >"${pkgdir}/usr/lib/tmpfiles.d/${_srcname}.conf"
}
